@model dz_GuestBook2.Models.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Авторизация</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Login" class="control-label"></label>
                @* текст поле для ввода логина *@
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                @* текст поле для ввода пароля *@
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Войти" class="btn btn-primary" />
                <a asp-area="" asp-controller="Account" asp-action="Register" class="btn btn-primary">Регистрация</a>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-primary">Войти как гость</a>
            </div>
        </form>
    </div>
</div>

@* здесь подключается частичная вью, на которой происходит
    подключение двух стандартных js файла для валидации
*@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}